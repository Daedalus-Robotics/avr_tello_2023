ModeChoice {
    layout: horizontal;
    background: $boost;
    height: 5;
    margin: 1;
    min-width: 50;
    padding: 1;
}

Button {
    width: 22;
}

#start {
    dock: left;
}

#stop {
    dock: left;
    display: none;
}

#description {
    content-align: center middle;
    height: 3;
}

.started #start {
    display: none;
}

.started #stop {
    display: block;
}

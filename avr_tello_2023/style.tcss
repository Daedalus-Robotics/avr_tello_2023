ModeChoice {
    layout: horizontal;
    background: $boost;
    height: 5;
    margin: 1;
    min-width: 50;
    padding: 1;
}

Button {
    width: 22;
}

TelloState {
    dock: top;
    layout: vertical;
}

#start {
    dock: left;
}

#stop {
    dock: left;
    display: none;
}

#description {
    dock: right;
    height: 5;
}

.started #start {
    display: none;
}

.started #stop {
    display: block;
}
